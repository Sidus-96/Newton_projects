<Window x:Class="GreenThumb.GardenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenThumb"
        mc:Ignorable="d"
        Title="GardenWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />

            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>


     
        <TextBlock Grid.Column="1" Grid.Row="0" Text="Your garden!" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"  />
        <ListView x:Name="lstGardenPlants" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"  ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible">

        </ListView>
       
        <Button Name ="btnGoBack"  Grid.Column="0" Grid.Row="1" Content="Go back" Width="80" Height="55" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnGoBack_Click"  />






    </Grid>
</Window>
