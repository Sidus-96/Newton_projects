<Window x:Class="GreenThumb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenThumb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />

            <RowDefinition />
            <RowDefinition />


        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Username" FontSize="15"  />
            <TextBox   Width="245" Height ="40" HorizontalAlignment="Left"/>
            <TextBlock Text="Password" Margin="0,5,0,0"  FontSize="15"/>
            <PasswordBox Name="txtPasswordSignIn" />

            <Button Grid.Row="2" Grid.Column="1" Height="30" Width="120" HorizontalAlignment="Left" Content="Login"/>


        </StackPanel>
        <Button Grid.Row="2" Grid.Column="1" Height="30" Width="120" HorizontalAlignment="Left" Content="Register"/>



    </Grid>
</Window>
